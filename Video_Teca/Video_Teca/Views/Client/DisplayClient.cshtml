@model IEnumerable<Video_Teca.Models.MoviesAndSeries>

@{
    ViewData["Title"] = "DisplayClient";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/css/Client.css">
    
</head>
<body>
    <div id="div_galery">
        <div class="galery">

            @foreach (var item in Model)
            {
                <div>
                    <a href="#" id="btn-popup" class="btn-popup">
                        abrir
                    </a>
                    <img src="@Html.DisplayFor(modelItem => item.movie_cover)" style="width: 200px; height: 200px" />
                    @*@Html.DisplayFor(modelItem => item.title)

                    @Html.DisplayFor(modelItem => item.synopsis)

                    @Html.DisplayFor(modelItem => item.release_year)

                    @Html.DisplayFor(modelItem => item.duration)

                    @Html.DisplayFor(modelItem => item.clasification)

                    @Html.DisplayFor(modelItem => item.director)

                    @Html.DisplayFor(modelItem => item.genre_id)

                    @Html.DisplayFor(modelItem => item.num_seasons)

                    @Html.DisplayFor(modelItem => item.num_episodes)

                    @Html.DisplayFor(modelItem => item.episode_duration)


                    @Html.DisplayFor(modelItem => item.year_of_release)

                    @Html.DisplayFor(modelItem => item.date_addded)

                    @Html.DisplayFor(modelItem => item.media_type)*@
                </div>

             
            }
        </div>
    </div>

    <div class="overlay" id="overlay">
        <div class="popup" id="popup">
            <a href="#" id="btn-cerrar-popup" class="btn-cerrar-popup">Cerrar</a>

        </div>
    </div>
       
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
        
        <script type="text/javascript">
            $(document).ready(function () {
                $(".galery").slick({
                    //dots: true,
                    //infinite: true,
                    //speed: 300,
                    //slidesToShow: 1,
                    //centerMode: true,
                    //variableWidth: true
                                 dots: true,
                    infinite: true,
                    speed: 300,
                    slidesToShow: 1,
                    adaptiveHeight: true
                });

            });

        </script>
        <script src="~/js/popup.js"></script>
    }
   
</body>
</html>



