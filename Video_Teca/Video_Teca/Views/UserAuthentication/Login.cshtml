@model Video_Teca.Models.DTO.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/css/Login.css">
</head>
<body>
    <form asp-action="Login" method="post">
       
           
        <div class="login-box">
            <h2>Login</h2>
            <form>
                <div class="user-box">

                    <label asp-for="Username">Username</label>
                     <input type="text" asp-for="Username" />
                   
                    <div class="msg">
                         <span class="err" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="user-box">
                     <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" />
                     <div class="msg">
                        <span class="err" asp-validation-for="Password"></span>
                    </div>
                </div>
                 @if (TempData["msg"] != null)
                  {
                      <div class="msg">
                             <span class="err">@TempData["msg"]</span>
                       </div>
                    }

                 <button type="submit">Login</button>
                <a href="/UserAuthentication/Registration">
                     <span></span>
                    <span></span>
                     <span></span>
                    <span></span>
                    Sign Up
                 </a>
            </form>
        </div>
          
    </form>
</body>
</html>
